define NZDigit 
1:uno | 
2:dos | 
3:tres | 
4:kuatro | 
5:cinco | 
6:seis | 
7:siete | 
8:ocho | 
9:nueve ;

define Digit [%0 : cero] | NZDigit;

define Number 
NZDigit | 
[[1:diez|2:veinti] [%0:0|NZDigit]] ;

define Plus %+ : más;
define Minus %- : menos;
define Slash %/ : barra;
define BackSlash %\ : [barra invertida];
define Star %* : asterisco;
define Dot %. : punto;
define SpecialChar Plus | Minus | Slash | BackSlash | Star | Dot;

define Enter {enter} : enter;

define OtherKey 
{underscore} : subrayado | 
{double-quote} : comillas dobles | 
{alt} : alt | 
{control} : control | 
{hyper} : hyper | 
{meta} : meta | 
{shift} : shift | 
{super} : super | 
{backspace} : [retroceso] | 
{break} : pausa | 
{delete} : borrar | 
{down} : abajo | 
{end} : fin | 
Enter | 
{escape} : escape | 
{home} : inicio | 
{insert} : insertar | 
{left} : izquierda | 
{menu} : menú | 
{next} : siguiente | 
{num-lock} : [bloqueo numérico] | 
{pause} : pausa | 
{print} : imprimir | 
{prior} : prior | 
{return} : retornar | 
{right} : derecha | 
{scroll-lock} : [bloqueo de desplazamiento] | 
{space} : espacio | 
{tab} : tab | 
{up} : arriba | 
{window} : windows ; 

define KPKey 
[{kp-} : 0] [Digit | Plus | Minus | Star | Slash | Dot | Enter];

define FKey 
f:efe Number ;

define Key 
KPKey | FKey | SpecialChar | OtherKey;

regex Key;
